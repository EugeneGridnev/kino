<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AvitoFilms" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AvitoFilms" parent="Base.Theme.AvitoFilms" />

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/card_corner_size</item>
    </style>

    <style name="movieFragmentMainText">
        <item name="android:layout_marginTop">@dimen/movie_fragment_main_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/movie_fragment_main_text_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/movie_fragment_main_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_fragment_main_text_margin_end</item>
    </style>

    <style name="movieFragmentText" parent="movieFragmentMainText">
        <item name="android:layout_marginStart">@dimen/movie_fragment_text_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_fragment_text_margin_end</item>
    </style>

    <style name="movieFragmentTitles" parent="movieFragmentText">
        <item name="android:layout_marginStart">@dimen/movie_fragment_titles_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_fragment_titles_margin_end</item>
    </style>

    <style name="movieFragmentRecycler">
        <item name="android:layout_marginTop">@dimen/movie_fragment_recycler_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/movie_fragment_recycler_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/movie_fragment_recycler_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_fragment_recycler_margin_end</item>
    </style>

    <style name="cardTextViewStyle">
        <item name="android:layout_marginStart">@dimen/card_text_view_style_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_text_view_style_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_text_view_style_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/card_text_view_style_margin_vertical</item>
    </style>

    <style name="cardRatingTextViewStyle" parent="cardTextViewStyle">
        <item name="android:layout_marginStart">@dimen/card_rating_text_view_style_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_rating_text_view_style_margin_horizontal</item>
    </style>
</resources>